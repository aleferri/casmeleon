// Binary ALU IMM
.opcode ADD {{ r, zp8 }}
.with ( r : Regs, zp8 : Ints ) -> {
    .if zp8 > 255 {
        .error addr8, "ZeroPage is limited to the first 256 locations of memory";
    }
    .out [ .expr ALU_OPCODE_ZP( r, OP_ADD ), zp8 ];
}

