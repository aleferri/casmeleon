.opcode CALL {{ addr16 }}
.with (addr16 : Ints) -> {
    // 16Â° word is the "Link" register, so:
    // ST P, 16
    // LD P, (P, 1)
    // .WORD ADDR16
    .out [ 0b11001000, 16, 0b10000000, 1, addr16 >> 8, addr16 & 255 ];
}

.opcode RET {{ }}
.with () -> {
    // 16Â° word is the "Link" register, so:
    // LD Y, 16
    // JMP P, ( Y + 1 )
    .out [ 0b10001010, 16, 0b01001010, 1 ];
}